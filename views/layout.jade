doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/global.css')
    script(src="/javascripts/jquery-3.1.1.js")
  body
    nav.navbar.navbar-default
      .container-fluid(style="max-width: 1000px")
        .navbar-header
          a.navbar-brand(href="/")
            img#logo(src="/images/logo_initials.png", style="height: 26px;")
        ul.nav.navbar-nav
          li#homepage-menu-btn
            a(href="/")
              span.glyphicon.glyphicon-home(style="margin-right: 5px")
              span Homepage
          li#browse-menu-btn
            a(href="/laura") 
              span.glyphicon.glyphicon-th-list(style="margin-right: 5px")
              span Browse
        .navbar-form.navbar-right  
          div.navbar-header
            a(href="/feedback")
              button#feedback-btn.btn.btn-primary 
                span.glyphicon.glyphicon-envelope(style="margin-right: 5px")
                span Feedback
            a(href="/add")
              button#add-asset-btn.btn.btn-success(style="margin-left: 5px") 
                span.glyphicon.glyphicon-plus(style="margin-right: 5px")
                span Add an asset
    #content
      block content
